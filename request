$sql = "SELECT COUNT(id) FROM {$this->table} WHERE $field = ?";
        $params = [$value];
        if($execpt !== null)
        {
            $sql .= " AND id != ?";
            $params[] = $execpt;
        }
        $stmt = $this->db->getPDO()->prepare($sql);
        $stmt->execute($params);

        return (int)$stmt->fetch(\PDO::FETCH_NUM)[0] > 0;